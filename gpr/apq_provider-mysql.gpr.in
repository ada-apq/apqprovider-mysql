with "kow_framework_setup.gpr";

with "apq.gpr";
with "apq-mysql.gpr";
with "apq_provider.gpr";

project APQ_Provider.MySQL is

	version := APQ_Provider.Version; 
	prefix	:= $prefix;
	
	
	for Source_Dirs use ( prefix & "/include/apqprovider-mysql" );
	for Library_Dir use prefix & "/lib";
	for Library_Name use "apq_provider-mysql";
	for Library_Version use "libapq_provider-mysql.so." & Version;
	for Library_Kind use kow_framework_Setup'Library_Kind;
	for Externally_Built use "true";

	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;

end APQ_Provider.MySQL;

